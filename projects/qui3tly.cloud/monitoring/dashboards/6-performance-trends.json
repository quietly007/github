{
  "title": "6. Performance Trends",
  "tags": [
    "qui3tly-cloud",
    "trends",
    "capacity"
  ],
  "timezone": "browser",
  "schemaVersion": 38,
  "refresh": "5m",
  "templating": {
    "list": [
      {
        "name": "timerange",
        "type": "custom",
        "options": [
          {
            "text": "24 hours",
            "value": "24h"
          },
          {
            "text": "7 days",
            "value": "7d"
          },
          {
            "text": "30 days",
            "value": "30d"
          }
        ],
        "current": {
          "text": "7 days",
          "value": "7d"
        }
      }
    ]
  },
  "time": {
    "from": "now-7d",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "CPU Usage Trend",
      "type": "timeseries",
      "targets": [
        {
          "expr": "100 - (avg by (server) (rate(node_cpu_seconds_total{mode=\"idle\"}[$timerange])) * 100)",
          "legendFormat": "{{server}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "custom": {
            "fillOpacity": 10
          }
        }
      },
      "gridPos": {
        "h": 10,
        "w": 24,
        "x": 0,
        "y": 0
      }
    },
    {
      "id": 2,
      "title": "Memory Usage Trend",
      "type": "timeseries",
      "targets": [
        {
          "expr": "((node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes) * 100",
          "legendFormat": "{{server}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "custom": {
            "fillOpacity": 10
          }
        }
      },
      "gridPos": {
        "h": 10,
        "w": 24,
        "x": 0,
        "y": 10
      }
    },
    {
      "id": 3,
      "title": "Disk Usage Growth",
      "type": "timeseries",
      "targets": [
        {
          "expr": "(node_filesystem_size_bytes{fstype!~\"tmpfs|fuse.*\"} - node_filesystem_avail_bytes) / node_filesystem_size_bytes * 100",
          "legendFormat": "{{server}} {{mountpoint}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "custom": {
            "fillOpacity": 10
          }
        }
      },
      "gridPos": {
        "h": 10,
        "w": 24,
        "x": 0,
        "y": 20
      }
    },
    {
      "id": 4,
      "title": "Network Traffic Trends",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(node_network_receive_bytes_total{device!~\"lo|veth.*\"}[$timerange])",
          "legendFormat": "{{server}} RX"
        },
        {
          "expr": "rate(node_network_transmit_bytes_total{device!~\"lo|veth.*\"}[$timerange])",
          "legendFormat": "{{server}} TX"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "custom": {
            "fillOpacity": 10
          }
        }
      },
      "gridPos": {
        "h": 10,
        "w": 24,
        "x": 0,
        "y": 30
      }
    },
    {
      "id": 5,
      "title": "Container Resource Usage Trend - CPU",
      "type": "timeseries",
      "targets": [
        {
          "expr": "topk(10, rate(container_cpu_usage_seconds_total{name!=\"\"}[$timerange]) * 100)",
          "legendFormat": "{{name}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "custom": {
            "fillOpacity": 10
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "calcs": [
            "mean",
            "max"
          ]
        }
      },
      "gridPos": {
        "h": 10,
        "w": 12,
        "x": 0,
        "y": 40
      }
    },
    {
      "id": 6,
      "title": "Container Resource Usage Trend - Memory",
      "type": "timeseries",
      "targets": [
        {
          "expr": "topk(10, container_memory_usage_bytes{name!=\"\"})",
          "legendFormat": "{{name}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "custom": {
            "fillOpacity": 10
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "calcs": [
            "mean",
            "max"
          ]
        }
      },
      "gridPos": {
        "h": 10,
        "w": 12,
        "x": 12,
        "y": 40
      }
    },
    {
      "id": 7,
      "title": "Disk I/O Patterns",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(node_disk_read_bytes_total[$timerange])",
          "legendFormat": "{{server}} {{device}} Read"
        },
        {
          "expr": "rate(node_disk_written_bytes_total[$timerange])",
          "legendFormat": "{{server}} {{device}} Write"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "custom": {
            "fillOpacity": 10
          }
        }
      },
      "gridPos": {
        "h": 10,
        "w": 24,
        "x": 0,
        "y": 50
      }
    },
    {
      "id": 8,
      "title": "Request Rate Trends (Traefik)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(rate(traefik_service_requests_total[$timerange]))",
          "legendFormat": "Total Requests"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": {
            "fillOpacity": 10
          }
        }
      },
      "gridPos": {
        "h": 10,
        "w": 24,
        "x": 0,
        "y": 60
      }
    }
  ]
}
