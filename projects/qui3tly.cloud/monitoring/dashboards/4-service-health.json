{
  "title": "4. Service Health",
  "tags": [
    "qui3tly-cloud",
    "services",
    "health"
  ],
  "timezone": "browser",
  "schemaVersion": 38,
  "refresh": "30s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Traefik - Requests per Second",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(rate(traefik_service_requests_total[5m])) by (service)",
          "legendFormat": "{{service}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      }
    },
    {
      "id": 2,
      "title": "Traefik - Response Times",
      "type": "timeseries",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(traefik_service_request_duration_seconds_bucket[5m]))",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.99, rate(traefik_service_request_duration_seconds_bucket[5m]))",
          "legendFormat": "p99"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      }
    },
    {
      "id": 3,
      "title": "Traefik - HTTP Status Codes",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(rate(traefik_service_requests_total[5m])) by (code)",
          "legendFormat": "{{code}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      }
    },
    {
      "id": 4,
      "title": "Traefik - Error Rate",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(rate(traefik_service_requests_total{code=~\"5..\"}[5m]))",
          "legendFormat": "5xx errors"
        },
        {
          "expr": "sum(rate(traefik_service_requests_total{code=~\"4..\"}[5m]))",
          "legendFormat": "4xx errors"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      }
    },
    {
      "id": 5,
      "title": "Headscale - Connected Clients",
      "type": "stat",
      "targets": [
        {
          "expr": "headscale_connected_nodes"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {
                "value": 0,
                "color": "red"
              },
              {
                "value": 1,
                "color": "green"
              }
            ]
          }
        }
      },
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 0,
        "y": 16
      }
    },
    {
      "id": 6,
      "title": "CrowdSec - Active Bans",
      "type": "stat",
      "targets": [
        {
          "expr": "crowdsec_decisions_total"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "value"
          }
        }
      },
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 6,
        "y": 16
      }
    },
    {
      "id": 7,
      "title": "Authelia - Authentication Attempts",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(rate(authelia_authentication_attempts_total[5m])) by (success)",
          "legendFormat": "{{success}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 20
      }
    },
    {
      "id": 8,
      "title": "Mailcow - Queue Size",
      "type": "stat",
      "targets": [
        {
          "expr": "postfix_queue_size"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {
                "value": 0,
                "color": "green"
              },
              {
                "value": 100,
                "color": "yellow"
              },
              {
                "value": 500,
                "color": "red"
              }
            ]
          }
        }
      },
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 12,
        "y": 16
      }
    },
    {
      "id": 9,
      "title": "Prometheus - Target Status",
      "type": "table",
      "targets": [
        {
          "expr": "up",
          "format": "table",
          "instant": true
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "renameByName": {
              "job": "Job",
              "server": "Server",
              "Value": "Status"
            }
          }
        }
      ],
      "fieldConfig": {
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "Status"
            },
            "properties": [
              {
                "id": "mappings",
                "value": [
                  {
                    "value": 1,
                    "text": "UP",
                    "color": "green"
                  },
                  {
                    "value": 0,
                    "text": "DOWN",
                    "color": "red"
                  }
                ]
              },
              {
                "id": "custom.cellOptions",
                "value": {
                  "type": "color-background"
                }
              }
            ]
          }
        ]
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 20
      }
    }
  ]
}
