{
  "title": "7. Alerting Dashboard",
  "tags": [
    "qui3tly-cloud",
    "alerts",
    "monitoring"
  ],
  "timezone": "browser",
  "schemaVersion": 38,
  "refresh": "30s",
  "time": {
    "from": "now-24h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Current Active Alerts",
      "type": "table",
      "targets": [
        {
          "expr": "ALERTS{alertstate=\"firing\"}",
          "format": "table",
          "instant": true
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "renameByName": {
              "alertname": "Alert",
              "severity": "Severity",
              "server": "Server",
              "__name__": "Description"
            }
          }
        }
      ],
      "fieldConfig": {
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "Severity"
            },
            "properties": [
              {
                "id": "mappings",
                "value": [
                  {
                    "value": "critical",
                    "text": "CRITICAL",
                    "color": "red"
                  },
                  {
                    "value": "warning",
                    "text": "WARNING",
                    "color": "yellow"
                  },
                  {
                    "value": "info",
                    "text": "INFO",
                    "color": "blue"
                  }
                ]
              },
              {
                "id": "custom.cellOptions",
                "value": {
                  "type": "color-background"
                }
              }
            ]
          }
        ]
      },
      "gridPos": {
        "h": 10,
        "w": 24,
        "x": 0,
        "y": 0
      }
    },
    {
      "id": 2,
      "title": "Alert Count by Severity",
      "type": "stat",
      "targets": [
        {
          "expr": "count(ALERTS{alertstate=\"firing\", severity=\"critical\"})",
          "legendFormat": "Critical"
        },
        {
          "expr": "count(ALERTS{alertstate=\"firing\", severity=\"warning\"})",
          "legendFormat": "Warning"
        },
        {
          "expr": "count(ALERTS{alertstate=\"firing\", severity=\"info\"})",
          "legendFormat": "Info"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        },
        "overrides": [
          {
            "matcher": {
              "id": "byFrameRefID",
              "options": "A"
            },
            "properties": [
              {
                "id": "color",
                "value": {
                  "mode": "fixed",
                  "fixedColor": "red"
                }
              }
            ]
          },
          {
            "matcher": {
              "id": "byFrameRefID",
              "options": "B"
            },
            "properties": [
              {
                "id": "color",
                "value": {
                  "mode": "fixed",
                  "fixedColor": "yellow"
                }
              }
            ]
          },
          {
            "matcher": {
              "id": "byFrameRefID",
              "options": "C"
            },
            "properties": [
              {
                "id": "color",
                "value": {
                  "mode": "fixed",
                  "fixedColor": "blue"
                }
              }
            ]
          }
        ]
      },
      "gridPos": {
        "h": 6,
        "w": 24,
        "x": 0,
        "y": 10
      }
    },
    {
      "id": 3,
      "title": "Alert History (24h)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "count(ALERTS) by (alertname, alertstate)",
          "legendFormat": "{{alertname}} ({{alertstate}})"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      },
      "gridPos": {
        "h": 10,
        "w": 24,
        "x": 0,
        "y": 16
      }
    },
    {
      "id": 4,
      "title": "Alert Frequency by Type",
      "type": "bargauge",
      "targets": [
        {
          "expr": "sum(changes(ALERTS[24h])) by (alertname)",
          "legendFormat": "{{alertname}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      },
      "options": {
        "orientation": "horizontal",
        "displayMode": "gradient"
      },
      "gridPos": {
        "h": 10,
        "w": 12,
        "x": 0,
        "y": 26
      }
    },
    {
      "id": 5,
      "title": "Alerts by Server",
      "type": "piechart",
      "targets": [
        {
          "expr": "count(ALERTS{alertstate=\"firing\"}) by (server)",
          "legendFormat": "{{server}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right"
        }
      },
      "gridPos": {
        "h": 10,
        "w": 12,
        "x": 12,
        "y": 26
      }
    },
    {
      "id": 6,
      "title": "Alert State Changes (24h)",
      "type": "table",
      "targets": [
        {
          "expr": "changes(ALERTS[24h])",
          "format": "table",
          "instant": true
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "renameByName": {
              "alertname": "Alert",
              "server": "Server",
              "Value": "Changes"
            }
          }
        }
      ],
      "gridPos": {
        "h": 10,
        "w": 24,
        "x": 0,
        "y": 36
      }
    },
    {
      "id": 7,
      "title": "Time to Resolution (Avg)",
      "type": "stat",
      "targets": [
        {
          "expr": "avg(ALERTS_FOR_STATE)"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {
                "value": 0,
                "color": "green"
              },
              {
                "value": 300,
                "color": "yellow"
              },
              {
                "value": 1800,
                "color": "red"
              }
            ]
          }
        }
      },
      "gridPos": {
        "h": 6,
        "w": 12,
        "x": 0,
        "y": 46
      }
    },
    {
      "id": 8,
      "title": "AlertManager Status",
      "type": "stat",
      "targets": [
        {
          "expr": "up{job=\"alertmanager\"}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "value": 1,
              "text": "UP",
              "color": "green"
            },
            {
              "value": 0,
              "text": "DOWN",
              "color": "red"
            }
          ]
        }
      },
      "gridPos": {
        "h": 6,
        "w": 12,
        "x": 12,
        "y": 46
      }
    }
  ]
}
