{
  "title": "üî• Production Infrastructure Monitor",
  "tags": ["qui3tly", "production", "complete"],
  "timezone": "browser",
  "schemaVersion": 38,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "gridPos": { "h": 6, "w": 10, "x": 0, "y": 0 },
      "title": "üü¢ SERVERS STATUS",
      "type": "table",
      "targets": [
        {
          "expr": "up{job=~\"node-.*\"}",
          "format": "table",
          "refId": "A",
          "instant": true
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "__name__": true,
              "Time": true,
              "job": true
            },
            "renameByName": {
              "instance": "Server",
              "server": "Hostname",
              "Value": "Status"
            }
          }
        }
      ],
      "fieldConfig": {
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Status" },
            "properties": [
              {
                "id": "custom.displayMode",
                "value": "color-background-solid"
              },
              {
                "id": "mappings",
                "value": [
                  {
                    "options": {
                      "0": { "text": "‚ùå DOWN", "color": "red" },
                      "1": { "text": "‚úÖ UP", "color": "green" }
                    },
                    "type": "value"
                  }
                ]
              }
            ]
          }
        ]
      }
    },
    {
      "id": 20,
      "gridPos": { "h": 3, "w": 7, "x": 10, "y": 0 },
      "title": "üê≥ Docker Containers Status",
      "type": "stat",
      "targets": [
        {
          "expr": "count(rate(container_cpu_usage_seconds_total{id=~\"/system.slice/docker.+\"}[5m]))",
          "refId": "A",
          "legendFormat": "Total"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": { "mode": "fixed", "fixedColor": "blue" },
          "mappings": []
        }
      },
      "options": {
        "textMode": "value",
        "colorMode": "background",
        "graphMode": "none"
      }
    },
    {
      "id": 21,
      "gridPos": { "h": 3, "w": 7, "x": 17, "y": 0 },
      "title": "‚öôÔ∏è Native Services Status",
      "type": "stat",
      "targets": [
        {
          "expr": "count(rate(container_cpu_usage_seconds_total{id=~\"/system.slice/.*service\"}[5m]))",
          "refId": "A",
          "legendFormat": "Total"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": { "mode": "fixed", "fixedColor": "orange" },
          "mappings": []
        }
      },
      "options": {
        "textMode": "value",
        "colorMode": "background",
        "graphMode": "none"
      }
    },
    {
      "id": 2,
      "gridPos": { "h": 3, "w": 7, "x": 10, "y": 3 },
      "title": "üìä Total Processes",
      "type": "stat",
      "targets": [
        {
          "expr": "count(rate(container_cpu_usage_seconds_total{id=~\".+/.+\",id!=\"/\"}[5m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": { "mode": "fixed", "fixedColor": "green" }
        }
      },
      "options": {
        "textMode": "value",
        "colorMode": "background",
        "graphMode": "none"
      }
    },
    {
      "id": 3,
      "gridPos": { "h": 3, "w": 7, "x": 17, "y": 3 },
      "title": "üìà Servers Online",
      "type": "stat",
      "targets": [
        {
          "expr": "count(up{job=~\"node-.*\"} == 1)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": 0, "color": "red" },
              { "value": 1, "color": "green" }
            ]
          }
        }
      },
      "options": {
        "textMode": "value",
        "colorMode": "background",
        "graphMode": "none"
      }
    },
    {
      "id": 6,
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 6 },
      "title": "üíª CPU Usage",
      "type": "timeseries",
      "targets": [
        {
          "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 20,
            "lineWidth": 2
          }
        }
      }
    },
    {
      "id": 7,
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 6 },
      "title": "üß† Memory Usage",
      "type": "timeseries",
      "targets": [
        {
          "expr": "((node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes) * 100",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 20,
            "lineWidth": 2
          }
        }
      }
    },
    {
      "id": 8,
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 6 },
      "title": "üíæ Disk Usage",
      "type": "timeseries",
      "targets": [
        {
          "expr": "(1 - (node_filesystem_avail_bytes{mountpoint=\"/\"} / node_filesystem_size_bytes{mountpoint=\"/\"})) * 100",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 20,
            "lineWidth": 2
          }
        }
      }
    },
    {
      "id": 10,
      "gridPos": { "h": 12, "w": 12, "x": 0, "y": 14 },
      "title": "üê≥ TOP 10 DOCKER CONTAINERS",
      "type": "table",
      "targets": [
        {
          "expr": "topk(10, sum by (instance, container_label_com_docker_compose_service, name) (rate(container_cpu_usage_seconds_total{id=~\"/system.slice/docker.+\"}[5m])) * 100)",
          "format": "table",
          "refId": "A",
          "instant": true
        },
        {
          "expr": "topk(10, sum by (instance, container_label_com_docker_compose_service, name) (container_memory_usage_bytes{id=~\"/system.slice/docker.+\"}) / 1024 / 1024)",
          "format": "table",
          "refId": "B",
          "instant": true
        },
        {
          "expr": "topk(10, sum by (instance, container_label_com_docker_compose_service, name) (rate(container_network_receive_bytes_total{id=~\"/system.slice/docker.+\"}[5m]) + rate(container_network_transmit_bytes_total{id=~\"/system.slice/docker.+\"}[5m])) / 1024)",
          "format": "table",
          "refId": "C",
          "instant": true
        }
      ],
      "transformations": [
        {
          "id": "merge",
          "options": {}
        },
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "__name__": true,
              "Time": true,
              "Time 1": true,
              "Time 2": true,
              "container_label_com_docker_compose_service": true
            },
            "indexByName": {
              "name": 0,
              "instance": 1,
              "Value #A": 2,
              "Value #B": 3,
              "Value #C": 4
            },
            "renameByName": {
              "name": "Service",
              "instance": "Server",
              "Value #A": "CPU %",
              "Value #B": "Memory (MB)",
              "Value #C": "Network (KB/s)"
            }
          }
        }
      ],
      "fieldConfig": {
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "CPU %" },
            "properties": [
              {
                "id": "custom.displayMode",
                "value": "color-background-solid"
              },
              {
                "id": "decimals",
                "value": 2
              },
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    { "value": 0, "color": "green" },
                    { "value": 50, "color": "yellow" },
                    { "value": 80, "color": "red" }
                  ]
                }
              }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Memory (MB)" },
            "properties": [
              {
                "id": "decimals",
                "value": 0
              },
              {
                "id": "custom.displayMode",
                "value": "color-background"
              },
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    { "value": 0, "color": "green" },
                    { "value": 500, "color": "yellow" },
                    { "value": 1000, "color": "red" }
                  ]
                }
              }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Network (KB/s)" },
            "properties": [
              {
                "id": "decimals",
                "value": 1
              }
            ]
          }
        ]
      },
      "options": {
        "showHeader": true,
        "sortBy": [
          {
            "displayName": "CPU %",
            "desc": true
          }
        ]
      }
    },
    {
      "id": 11,
      "gridPos": { "h": 12, "w": 12, "x": 12, "y": 14 },
      "title": "‚öôÔ∏è TOP 10 NATIVE SERVICES",
      "type": "table",
      "targets": [
        {
          "expr": "topk(10, sum by (id, instance) (rate(container_cpu_usage_seconds_total{id=~\"/system.slice/.*service\"}[5m])) * 100)",
