                    { "value": 80, "color": "red" }
                  ]
                }
              }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Memory (MB)" },
            "properties": [
              {
                "id": "decimals",
                "value": 0
              },
              {
                "id": "custom.displayMode",
                "value": "color-background"
              },
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    { "value": 0, "color": "green" },
                    { "value": 500, "color": "yellow" },
                    { "value": 1000, "color": "red" }
                  ]
                }
              }
            ]
          }
        ]
      },
      "options": {
        "showHeader": true,
        "sortBy": [
          {
            "displayName": "CPU %",
            "desc": true
          }
        ]
      }
    },
    {
      "id": 12,
      "gridPos": { "h": 12, "w": 24, "x": 0, "y": 26 },
      "title": "üìä TOP 10 ALL PROCESSES - Complete Overview",
      "type": "table",
      "targets": [
        {
          "expr": "topk(10, sum by (id, instance, container_label_com_docker_compose_service, name) (rate(container_cpu_usage_seconds_total{id=~\".+/.+\", id!=\"/\"}[5m])) * 100)",
          "format": "table",
          "refId": "A",
          "instant": true
        },
        {
          "expr": "topk(10, sum by (id, instance, container_label_com_docker_compose_service, name) (container_memory_usage_bytes{id=~\".+/.+\", id!=\"/\"}) / 1024 / 1024)",
          "format": "table",
          "refId": "B",
