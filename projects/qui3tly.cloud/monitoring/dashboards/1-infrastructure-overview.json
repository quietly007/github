        {
          "expr": "topk(10, sum by (id, instance, container_label_com_docker_compose_service, name) (rate(container_network_receive_bytes_total{id=~\".+/.+\", id!=\"/\"}[5m]) + rate(container_network_transmit_bytes_total{id=~\".+/.+\", id!=\"/\"}[5m])) / 1024)",
          "format": "table",
          "refId": "C",
          "instant": true
