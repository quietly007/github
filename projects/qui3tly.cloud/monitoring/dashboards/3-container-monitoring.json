{
  "title": "3. Container Monitoring",
  "tags": [
    "qui3tly-cloud",
    "containers",
    "docker"
  ],
  "timezone": "browser",
  "schemaVersion": 38,
  "refresh": "30s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Container Status Overview",
      "type": "table",
      "targets": [
        {
          "expr": "container_last_seen{name!=\"\"}",
          "format": "table",
          "instant": true
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "renameByName": {
              "name": "Container",
              "server": "Server",
              "image": "Image"
            }
          }
        }
      ],
      "gridPos": {
        "h": 12,
        "w": 24,
        "x": 0,
        "y": 0
      }
    },
    {
      "id": 2,
      "title": "Container CPU Usage",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{name!=\"\"}[5m]) * 100",
          "legendFormat": "{{server}}/{{name}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "custom": {
            "fillOpacity": 10
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "calcs": [
            "last",
            "max"
          ]
        }
      },
      "gridPos": {
        "h": 10,
        "w": 12,
        "x": 0,
        "y": 12
      }
    },
    {
      "id": 3,
      "title": "Container Memory Usage",
      "type": "timeseries",
      "targets": [
        {
          "expr": "container_memory_usage_bytes{name!=\"\"}",
          "legendFormat": "{{server}}/{{name}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "custom": {
            "fillOpacity": 10
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "calcs": [
            "last",
            "max"
          ]
        }
      },
      "gridPos": {
        "h": 10,
        "w": 12,
        "x": 12,
        "y": 12
      }
    },
    {
      "id": 4,
      "title": "Container Restart Count",
      "type": "table",
      "targets": [
        {
          "expr": "changes(container_start_time_seconds{name!=\"\"}[24h])",
          "format": "table",
          "instant": true
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "renameByName": {
              "name": "Container",
              "server": "Server",
              "Value": "Restarts (24h)"
            }
          }
        }
      ],
      "fieldConfig": {
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "Restarts (24h)"
            },
            "properties": [
              {
                "id": "thresholds",
                "value": {
                  "steps": [
                    {
                      "value": 0,
                      "color": "green"
                    },
                    {
                      "value": 1,
                      "color": "yellow"
                    },
                    {
                      "value": 3,
                      "color": "red"
                    }
                  ]
                }
              },
              {
                "id": "custom.cellOptions",
                "value": {
                  "type": "color-background"
                }
              }
            ]
          }
        ]
      },
      "gridPos": {
        "h": 10,
        "w": 12,
        "x": 0,
        "y": 22
      }
    },
    {
      "id": 5,
      "title": "Container Network I/O",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(container_network_receive_bytes_total{name!=\"\"}[5m])",
          "legendFormat": "{{name}} RX"
        },
        {
          "expr": "rate(container_network_transmit_bytes_total{name!=\"\"}[5m])",
          "legendFormat": "{{name}} TX"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "custom": {
            "fillOpacity": 10
          }
        }
      },
      "gridPos": {
        "h": 10,
        "w": 12,
        "x": 12,
        "y": 22
      }
    },
    {
      "id": 6,
      "title": "Top 10 Containers by CPU",
      "type": "bargauge",
      "targets": [
        {
          "expr": "topk(10, rate(container_cpu_usage_seconds_total{name!=\"\"}[5m]) * 100)",
          "legendFormat": "{{name}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "max": 100
        }
      },
      "options": {
        "orientation": "horizontal",
        "displayMode": "gradient"
      },
      "gridPos": {
        "h": 10,
        "w": 12,
        "x": 0,
        "y": 32
      }
    },
    {
      "id": 7,
      "title": "Top 10 Containers by Memory",
      "type": "bargauge",
      "targets": [
        {
          "expr": "topk(10, container_memory_usage_bytes{name!=\"\"})",
          "legendFormat": "{{name}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        }
      },
      "options": {
        "orientation": "horizontal",
        "displayMode": "gradient"
      },
      "gridPos": {
        "h": 10,
        "w": 12,
        "x": 12,
        "y": 32
      }
    }
  ]
}
