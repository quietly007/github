{
  "title": "2. Server Details",
  "tags": [
    "qui3tly-cloud",
    "server",
    "details"
  ],
  "timezone": "browser",
  "schemaVersion": 38,
  "refresh": "30s",
  "templating": {
    "list": [
      {
        "name": "server",
        "type": "query",
        "query": "label_values(up{job=~\"master-node|lady-node\"}, server)",
        "current": {
          "text": "master",
          "value": "master"
        },
        "multi": false
      }
    ]
  },
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "CPU Cores Usage",
      "type": "timeseries",
      "targets": [
        {
          "expr": "100 - (avg by (cpu) (rate(node_cpu_seconds_total{server=\"$server\", mode=\"idle\"}[5m])) * 100)",
          "legendFormat": "CPU {{cpu}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      }
    },
    {
      "id": 2,
      "title": "Memory Usage Breakdown",
      "type": "timeseries",
      "targets": [
        {
          "expr": "node_memory_MemTotal_bytes{server=\"$server\"}",
          "legendFormat": "Total"
        },
        {
          "expr": "node_memory_MemAvailable_bytes{server=\"$server\"}",
          "legendFormat": "Available"
        },
        {
          "expr": "node_memory_Buffers_bytes{server=\"$server\"}",
          "legendFormat": "Buffers"
        },
        {
          "expr": "node_memory_Cached_bytes{server=\"$server\"}",
          "legendFormat": "Cached"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      }
    },
    {
      "id": 3,
      "title": "System Load Average",
      "type": "timeseries",
      "targets": [
        {
          "expr": "node_load1{server=\"$server\"}",
          "legendFormat": "1m"
        },
        {
          "expr": "node_load5{server=\"$server\"}",
          "legendFormat": "5m"
        },
        {
          "expr": "node_load15{server=\"$server\"}",
          "legendFormat": "15m"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      }
    },
    {
      "id": 4,
      "title": "Network Traffic by Interface",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(node_network_receive_bytes_total{server=\"$server\", device!~\"lo|veth.*\"}[5m])",
          "legendFormat": "{{device}} RX"
        },
        {
          "expr": "rate(node_network_transmit_bytes_total{server=\"$server\", device!~\"lo|veth.*\"}[5m])",
          "legendFormat": "{{device}} TX"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      }
    },
    {
      "id": 5,
      "title": "Filesystem Usage",
      "type": "table",
      "targets": [
        {
          "expr": "node_filesystem_size_bytes{server=\"$server\", fstype!~\"tmpfs|fuse.*\"}",
          "format": "table",
          "instant": true
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {},
            "indexByName": {},
            "renameByName": {
              "mountpoint": "Mount",
              "Value": "Size"
            }
          }
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 16
      }
    },
    {
      "id": 6,
      "title": "Disk I/O",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(node_disk_read_bytes_total{server=\"$server\"}[5m])",
          "legendFormat": "{{device}} Read"
        },
        {
          "expr": "rate(node_disk_written_bytes_total{server=\"$server\"}[5m])",
          "legendFormat": "{{device}} Write"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 16
      }
    },
    {
      "id": 7,
      "title": "Running Containers",
      "type": "stat",
      "targets": [
        {
          "expr": "count(container_last_seen{server=\"$server\", name!=\"\"})"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {
                "value": 0,
                "color": "red"
              },
              {
                "value": 1,
                "color": "green"
              }
            ]
          }
        }
      },
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 0,
        "y": 24
      }
    },
    {
      "id": 8,
      "title": "Uptime",
      "type": "stat",
      "targets": [
        {
          "expr": "node_time_seconds{server=\"$server\"} - node_boot_time_seconds{server=\"$server\"}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": {
            "mode": "value"
          }
        }
      },
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 6,
        "y": 24
      }
    }
  ]
}
