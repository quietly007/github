app.secret_key = os.environ.get('FLASK_SECRET_KEY', 'dev-key-change-me')

# Configuration
HOSTNAME = "{{ inventory_hostname }}"
DOMAIN = "{{ domain }}"
SERVERS = {
    'master': 'master.qui3tly.cloud',
    'lady': 'lady.qui3tly.cloud',
}

