@app.route('/')
def index():
    return render_template_string(HTML_TEMPLATE, servers=SERVERS)

@app.route('/api/status')
def api_status():
    try:
        hostname = subprocess.getoutput('hostname')
        uptime = subprocess.getoutput('uptime -p')
        load = subprocess.getoutput('cat /proc/loadavg | cut -d" " -f1-3')
        memory = subprocess.getoutput('free -h | grep Mem | awk \'{print $3 "/" $2}\'')
        return jsonify({
            'hostname': hostname,
            'uptime': uptime,
            'load': load,
            'memory': memory
        })
    except Exception as e:
        return jsonify({'error': str(e)}), 500

@app.route('/api/containers')
def api_containers():
    try:
        # This runs inside container, so we need docker socket mounted
        output = subprocess.getoutput('docker ps --format "table {{.Names}}\t{{.Status}}" 2>/dev/null || echo "Docker not accessible"')
        return jsonify({'containers': output})
    except Exception as e:
        return jsonify({'error': str(e)}), 500

@app.route('/api/health')
def api_health():
    return jsonify({
        'status': 'ok',
        'hostname': HOSTNAME,
        'domain': DOMAIN
    })

if __name__ == '__main__':
    app.run(host='0.0.0.0', port=8080, debug=False)
