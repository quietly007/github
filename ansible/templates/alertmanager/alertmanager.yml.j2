# Alertmanager Configuration
# Routes alerts to Gotify, email, webhooks
# Auto-generated by Ansible - DO NOT EDIT MANUALLY

global:
  resolve_timeout: 5m

# Templates for alert messages
templates:
  - '/etc/alertmanager/templates/*.tmpl'

# Routing configuration
route:
  group_by: ['alertname', 'cluster', 'service']
  group_wait: 10s
  group_interval: 10s
  repeat_interval: 12h
  receiver: 'default'
  
  routes:
    # Critical alerts - immediate notification
    - match:
        severity: critical
      receiver: 'critical-alerts'
      continue: true
    
    # Warning alerts - batched
    - match:
        severity: warning
      receiver: 'warning-alerts'
      group_wait: 30s
      group_interval: 5m
    
    # Info alerts - batched heavily
    - match:
        severity: info
      receiver: 'info-alerts'
      group_wait: 5m
      group_interval: 30m

# Inhibition rules - prevent alert spam
inhibit_rules:
  # If node is down, suppress all other alerts from that node
  - source_match:
      severity: 'critical'
      alertname: 'InstanceDown'
    target_match_re:
      severity: 'warning|info'
    equal: ['instance']

# Receivers (notification channels)
receivers:
  # Default receiver - Gotify
  - name: 'default'
    webhook_configs:
      - url: 'http://gotify.quietly.its.me/message?token={{ gotify_token }}'
        send_resolved: true

  # Critical alerts - Gotify with high priority
  - name: 'critical-alerts'
    webhook_configs:
      - url: 'http://gotify.quietly.its.me/message?token={{ gotify_token }}&priority=10'
        send_resolved: true
    # Uncomment for email notifications (requires SMTP secrets)
    # email_configs:
    #   - to: 'alerts@quietly.its.me'
    #     from: 'prometheus@quietly.its.me'
    #     smarthost: 'lady.qui3tly.cloud:587'
    #     auth_username: 'alerts@quietly.its.me'
    #     auth_password: '{{ smtp_password | default("") }}'
    #     require_tls: true

  # Warning alerts - Gotify normal priority
  - name: 'warning-alerts'
    webhook_configs:
      - url: 'http://gotify.quietly.its.me/message?token={{ gotify_token }}&priority=5'
        send_resolved: true

  # Info alerts - Gotify low priority
  - name: 'info-alerts'
    webhook_configs:
      - url: 'http://gotify.quietly.its.me/message?token={{ gotify_token }}&priority=2'
        send_resolved: false
